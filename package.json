{
  "name": "foaas-mcp",
  "version": "0.1.0",
  "description": "MCP server to expose FOAAS (Fuck Off As A Service) functionality to AI clients",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "foaas-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "docker:build": "docker compose build",
    "docker:build:local": "docker compose build",
    "docker:build:ci": "docker build --build-arg VERSION=${VERSION:-dev} --build-arg COMMIT_SHA=${COMMIT_SHA:-unknown} --build-arg BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ') -t foaas-mcp:${VERSION:-dev} .",
    "docker:run": "docker compose run --rm foaas-mcp",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:docker": "./test-server.sh",
    "test:docker:local": "./test-server.sh foaas-mcp:local",
    "test:docker:registry": "./test-server.sh ghcr.io/gusztavvargadr/foaas-mcp:${REGISTRY_TAG:-latest}",
    "test:all": "npm test && npm run test:docker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gusztavvargadr/foaas-mcp.git"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "foaas",
    "github-copilot",
    "ai"
  ],
  "author": "gusztavvargadr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gusztavvargadr/foaas-mcp/issues"
  },
  "homepage": "https://github.com/gusztavvargadr/foaas-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
